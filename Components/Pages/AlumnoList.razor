@page "/AlumnoList"
@using MauiApp7.Data
@using MauiApp7.Models
@using Microsoft.Data.SqlClient
@inject IJSRuntime JSRuntime

<h2>Lista de Alumnos</h2>

<button @onclick="CargarAlumnos" class="btn btn-primary">Cargar Alumnos</button>

@if (alumnos == null)
{
    <p>Haz clic en "Cargar Alumnos" para mostrar los registros.</p>
}
else if (alumnos.Count == 0)
{
    <p>No hay alumnos registrados.</p>
}
else
{
    <table class="table table-striped mt-3">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nombre Completo</th>
                <th>CURP</th>
                <th>Matrícula</th>
                <th>Teléfono</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var a in alumnos)
            {
                <tr>
                    <td>@a.Id_Alumno</td>
                    <td>@a.Nombre @a.ApePat @a.ApeMat</td>
                    <td>@a.CURP</td>
                    <td>@a.Matricula</td>
                    <td>@a.Telefono</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<Alumno> alumnos = new();

    protected override async Task  OnInitializedAsync()
    {
        await CargarAlumnos();
    }

    private async Task CargarAlumnos()
    {
        try
        {
            alumnos = await DatabaseConnection.ObtenerAlumnosAsync();
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Error: {ex.Message}");
        }
    }
}
}